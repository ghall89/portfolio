<!-- Portfolio -->
<section class='uk-padding-large'>

	<div class='uk-text-center uk-margin-large'>
		<p>Here's just a few of the things I've built on my journey to make the web
			a better place!</p>
	</div>

	<div uk-filter='target: .js-filter'>
		<!-- ** Filter Menu For Portfolio **
			Un-comment this code when read to implement -->

		<!-- <div class="uk-background-default" uk-sticky="offset: 80; bottom: true; animation: uk-animation-slide-top" style="z-index: 970">
					<ul class="uk-subnav uk-subnav-pill uk-margin-small-top">
							<li class="uk-active" uk-filter-control><a href="#">All</a></li>
							<li uk-filter-control=".tag-js"><a href="#">JavaScript</a></li>
							<li uk-filter-control=".tag-api"><a href="#">REST APIs</a></li>
					</ul>
