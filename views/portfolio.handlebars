			<ul id="portfolio-grid" class="js-filter uk-child-width-1-1 uk-child-width-1-3@m uk-text-center uk-grid-small" uk-grid>
					{{#each data}}
					<div class="uk-background-muted">
						<div class="uk-text-center">
							<div class="uk-inline-clip uk-transition-toggle" tabindex="0">
								<img data-src="./img/portfolio/{{img}}" width="data-width" height="data-height" alt="{{title}}" uk-img>
								<div class="uk-transition-slide-bottom uk-position-bottom uk-overlay uk-overlay-default bg-blur">
									<p class="uk-h4 uk-margin-remove">{{title}}</p>
									<a href="" class="uk-margin-remove" uk-toggle="target: #{{github}}">More Info</a>
								</div>
							</div>
						</div>
					</div>
					{{/each}}
			</ul>
	</div>

</section>

<!-- Modals -->
{{#each data}}
<div id="{{github}}" uk-modal>
	<div class="uk-modal-dialog uk-modal-body uk-margin-auto-vertical">
		<button class="uk-modal-close-default" type="button" uk-close></button>
		<h2 class="uk-modal-title">{{title}}</h2>
		<p>{{description}}</p>
		<a href="{{url}}" target="_blank" class="uk-button uk-button-default">Visit Page</a>
		<a href="https://github.com/{{githubUser}}/{{github}}" target="_blank" class="uk-button uk-button-default">GitHub Repo</a>
	</div>
</div>
{{/each}}

